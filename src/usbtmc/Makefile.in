OCT := usbtmc.oct
OBJ := usbtmc.o usbtmc_close.o usbtmc_write.o usbtmc_read.o usbtmc_class.o

MKOCTFILE ?= mkoctfile

CFLAGS     = @DEFS@

all: $(OBJ) $(OCT)

%.o: %.cc
	$(MKOCTFILE) $(CFLAGS) -c $^

%.oct: %.o $(OBJ)
	$(MKOCTFILE) $^ -o ../$@

clean:
	rm -f *.oct *.o
	
distclean: clean
	rm Makefile

.PHONY: all clean
