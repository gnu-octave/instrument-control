OCT := gpib.oct gpib_timeout.oct gpib_write.oct gpib_close.oct gpib_read.oct __gpib_spoll__.oct __gpib_trigger__.oct __gpib_clrdevice__.oct
OBJ := gpib_class.o

MKOCTFILE  ?= mkoctfile
GREP ?= @GREP@

CFLAGS      = @DEFS@
LFLAGS      = @GPIBLIBS@

CC_SOURCES  := $(wildcard *.cc)
CC_TST_SOURCES := $(shell $(GREP) --files-with-matches '^%!' $(CC_SOURCES))
TST_SOURCES := $(patsubst %.cc,../../inst/test/%.cc-tst,$(CC_TST_SOURCES))

all: $(OBJ) $(OCT) $(TST_SOURCES)

%.o: %.cc
	$(MKOCTFILE) $(CFLAGS) -c $^

%.oct: %.o $(OBJ)
	$(MKOCTFILE) $^ $(LFLAGS) -o ../$@

../../inst/test:
	@mkdir -p "$@"

$(TST_SOURCES): ../../inst/test/%.cc-tst: %.cc | ../../inst/test
	@echo "Extracting tests from $< ..."
	@$(RM) -f "$@" "$@-t"
	@(      echo "## Generated from $<"; \
	        $(GREP) '^%!' "$<") > "$@"

clean:
	rm -f *.oct *.o

distclean: clean
	rm Makefile

.PHONY: all clean
