OCT := ../i2c.oct
OBJ := i2c.o i2c_close.o i2c_addr.o i2c_write.o i2c_read.o i2c_class.o __i2c_pkg_lock__.o

MKOCTFILE ?= mkoctfile
GREP ?= @GREP@

CFLAGS     = @DEFS@

CC_SOURCES  := $(wildcard *.cc)
CC_TST_SOURCES := $(shell $(GREP) --files-with-matches '^%!' $(CC_SOURCES))
TST_SOURCES := $(patsubst %.cc,../../inst/test/%.cc-tst,$(CC_TST_SOURCES))

all: $(OCT) $(TST_SOURCES)

%.o: %.cc
	$(MKOCTFILE) $(CFLAGS) -c $^

%.oct: $(OBJ)
	$(MKOCTFILE) $^ -o $@

../../inst/test:
	@mkdir -p "$@"

$(TST_SOURCES): ../../inst/test/%.cc-tst: %.cc | ../../inst/test
	@echo "Extracting tests from $< ..."
	@$(RM) -f "$@" "$@-t"
	@(      echo "## Generated from $<"; \
	        $(GREP) '^%!' "$<") > "$@"

clean:
	rm -f $(OCT) *.o

distclean: clean
	rm Makefile

.PHONY: all clean
