OCT := i2c.oct
OBJ := i2c.o i2c_close.o i2c_addr.o i2c_write.o i2c_read.o i2c_class.o

MKOCTFILE ?= mkoctfile
GREP ?= @GREP@

CFLAGS     = @DEFS@

CC_SOURCES  := $(wildcard *.cc)
CC_TST_SOURCES := $(shell $(GREP) --files-with-matches '^%!' $(CC_SOURCES))
TST_SOURCES := $(patsubst %.cc,../../inst/test/%.cc-tst,$(CC_TST_SOURCES))

all: $(OBJ) $(OCT) $(TST_SOURCES)

%.o: %.cc
	$(MKOCTFILE) $(CFLAGS) -c $^

%.oct: %.o $(OBJ)
	$(MKOCTFILE) $^ -o ../$@

../../inst/test:
	@mkdir -p "$@"

$(TST_SOURCES): ../../inst/test/%.cc-tst: %.cc | ../../inst/test
	@echo "Extracting tests from $< ..."
	@$(RM) -f "$@" "$@-t"
	@(      echo "## Generated from $<"; \
	        $(GREP) '^%!' "$<") > "$@"

clean:
	rm -f *.oct *.o

distclean: clean
	rm Makefile

.PHONY: all clean
