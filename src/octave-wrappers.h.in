#include <octave/sighandlers.h>

namespace  instrument_control
{
#if @HAVE_SET_SIGNAL_HANDLER_IN_OCTAVE_NAMESPACE@
  inline octave::sig_handler * 
  set_signal_handler(int sig, octave::sig_handler *handler)
  {
    return octave::set_signal_handler(sig, handler);
  }
#else
  inline sig_handler * 
  set_signal_handler(int sig, sig_handler *handler)
  {
    return octave_set_signal_handler(sig, handler);
  }
#endif

  inline void install_signal_handlers(void)
  {
#if @HAVE_INSTALL_SIGNAL_HANDLERS_IN_OCTAVE_NAMESPACE@
    octave::install_signal_handlers();
#else
    ::install_signal_handlers();
#endif
  }
}
