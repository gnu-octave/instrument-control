OCT := serial.oct srl_write.oct srl_read.oct __srl_properties__.oct
OBJ := serial_class.o

MKOCTFILE ?= mkoctfile

CFLAGS     = @DEFS@

all: $(OBJ) $(OCT)

%.o: %.cc
	$(MKOCTFILE) $(CFLAGS) -c $^

%.oct: %.o $(OBJ)
	$(MKOCTFILE) $^ -o ../$@

clean:
	rm -f *.oct *.o

distclean: clean
	rm Makefile

.PHONY: all clean
